<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC  "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!--动态方法调用-->
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <!--配置开发模式-->
    <constant name="struts.devMode" value="true" />
    <!--配置访问后缀名-->
    <constant name="struts.action.extension" value="do,action" />
    <!--编码-->
    <constant name="struts.i18n.encoding" value="UTF-8" />
    <!--静态内容是否缓存-->
    <constant name="struts.serve.static.browserCache" value="false" />
    <!--struts配置文件修改，自动加载-->
    <constant name="struts.configuration.xml.reload" value="true" />
    <!--指定由spring创建action对象-->
    <!-- <constant name="struts.objectFactory" value="spring" /> -->
    <!--上传文件的总大小限制-->
    <!-- <constant name="struts.multipart.maxSize" value="1024" /> -->
	
    <package name="packtest1" namespace="/" extends="struts-default">
        <action name="to-welcome" class="com.iris.test.action.Test1Action" method="execute">
            <result name="success">WEB-INF/jsp/common/welcome.jsp</result>
        </action>
        
        <action name="jaaulde-cookies" class="com.iris.test.action.TestJqueryAndPluginAction" method="jaauldeCookies">
            <result name="jaauldeCookies">WEB-INF/jsp/common/jaauldeCookies.jsp</result>
        </action>
        
    </package>
    
</struts>


